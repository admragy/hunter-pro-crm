# ========== Custom Domain & SSL ==========
DOMAIN="localhost"
USE_HTTPS=false
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# ========== Admin Panel ==========
ADMIN_EMAIL="admin@hunterpro.com"
ADMIN_PASSWORD="ChangeThisPassword123!"
ADMIN_FIRST_NAME="Admin"
ADMIN_LAST_NAME="User"

# ========== Notification Settings ==========
ENABLE_EMAIL_NOTIFICATIONS=true
