# ============================================================================
# Hunter Pro CRM Ultimate Enterprise - Environment Configuration
# Version: 7.0.0
# Copy this file to .env and fill in your values
# ============================================================================

# ========== Application Settings ==========
APP_NAME="Hunter Pro CRM Ultimate Enterprise"
APP_VERSION="7.0.0"
APP_DESCRIPTION="AI-Powered CRM with Multi-Channel Integration"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server Configuration
HOST="0.0.0.0"
PORT=5000
WORKERS=4
RELOAD=true

# ========== Security & Secrets ==========
SECRET_KEY="CHANGE_THIS_TO_RANDOM_SECRET_KEY_min_32_chars"
JWT_SECRET_KEY="CHANGE_THIS_TO_RANDOM_JWT_SECRET_min_32_chars"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRATION_DAYS=30

# Encryption
ENCRYPTION_KEY="CHANGE_THIS_TO_BASE64_FERNET_KEY"  # Use: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AES_KEY="CHANGE_THIS_TO_32_BYTE_HEX_KEY"

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:5000,https://yourdomain.com"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="*"
CORS_ALLOW_HEADERS="*"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# ========== Database Configuration ==========
# Primary Database (PostgreSQL recommended for production)
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/hunter_pro_db"
# Or SQLite for development:
# DATABASE_URL="sqlite+aiosqlite:///./hunter_pro.db"

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# ========== Redis Configuration ==========
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Cache Settings
CACHE_TTL=3600  # seconds
CACHE_ENABLED=true

# ========== AI & Machine Learning Configuration ==========

# AI Provider Selection (ollama, groq, gemini_flash, gemini_pro, openai, claude, auto)
DEFAULT_AI_PROVIDER="auto"  # Auto-routing based on task
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_TIMEOUT=30

# OpenAI (GPT-4)
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_ORG_ID=""

# Anthropic Claude
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-5-sonnet-20240620"

# Google Gemini
GOOGLE_API_KEY="your-google-api-key-here"
GOOGLE_PROJECT_ID="your-gcp-project-id"
GEMINI_FLASH_MODEL="gemini-1.5-flash"
GEMINI_PRO_MODEL="gemini-1.5-pro"

# Groq (Fast & Free)
GROQ_API_KEY="gsk_your-groq-api-key-here"
GROQ_MODEL="llama-3.1-70b-versatile"

# Ollama (Local)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3:8b"
OLLAMA_TIMEOUT=120

# Vector Database (Pinecone/Qdrant)
VECTOR_DB_TYPE="qdrant"  # pinecone, qdrant, chroma
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp"
PINECONE_INDEX_NAME="hunter-pro-vectors"

QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""
QDRANT_COLLECTION_NAME="hunter_pro_embeddings"

# Embedding Model
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_DIMENSION=384

# ========== WhatsApp Configuration ==========

# WhatsApp Mode (selenium, twilio, cloud_api, webhook, local, bulk)
WHATSAPP_MODE="selenium"
WHATSAPP_ENABLED=true

# Selenium Mode (Free - Web.WhatsApp.com)
WHATSAPP_HEADLESS=false  # Set to true after first login
WHATSAPP_PHONE_NUMBER="+1234567890"
WHATSAPP_SESSION_PATH="./whatsapp_sessions"
WHATSAPP_DELAY_MIN=1  # seconds
WHATSAPP_DELAY_MAX=3  # seconds
WHATSAPP_MAX_RETRIES=3

