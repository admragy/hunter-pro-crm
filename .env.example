UPLOAD_DIRECTORY="./uploads"

# ========== PWA Configuration ==========
PWA_ENABLED=true
PWA_NAME="Hunter Pro CRM"
PWA_SHORT_NAME="HunterPro"
PWA_THEME_COLOR="#4F46E5"
PWA_BACKGROUND_COLOR="#ffffff"
PWA_DISPLAY="standalone"
PWA_ORIENTATION="portrait"

# ========== Localization ==========
DEFAULT_LANGUAGE="ar"  # ar, en, fr, de, es
SUPPORTED_LANGUAGES="ar,en,fr,de,es"
TIMEZONE="Asia/Riyadh"

# ========== Feature Flags ==========
FEATURE_AI_CHAT=true
FEATURE_WHATSAPP=true
FEATURE_FACEBOOK_ADS=true
FEATURE_EMAIL_CAMPAIGNS=true
FEATURE_SMS_CAMPAIGNS=true
FEATURE_ANALYTICS=true
FEATURE_API=true
FEATURE_WEBHOOKS=true
