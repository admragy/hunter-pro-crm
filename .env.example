# ========== Compliance ==========
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
ENABLE_AUDIT_LOG=true

# ========== Backup & Recovery ==========
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION="./backups"

# ========== Development Tools ==========
ENABLE_SWAGGER=true
ENABLE_REDOC=true
ENABLE_GRAPHIQL=true
DEBUG_TOOLBAR=true

# ========== Testing ==========
